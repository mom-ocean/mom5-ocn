.navbar.navbar-static-top.navbar-inverse
  .navbar-inner
    .container
      .span10.offset1
        a.brand(href="/") #{project_title}
        ul.nav.nav-pills
          li(class=page === "downloads" ? "active" : undefined)
            a(href="/downloads") Downloads
          li(class=page === "tasks" ? "active" : undefined)
            a(href="/tasks") Tasks
          li(class=page === "CI" ? "active" : undefined)
            a(href="/CI") CI
          li.dropdown(class=page === "docs" ? "active" : undefined)
            a(href="#", class="dropdown-toggle", data-toggle="dropdown") Docs <b class="caret"></b>
            ul.dropdown-menu
              li(role="presentation")
                a(role="menuitem", href="/docs") Documentation Home
              li.divider(role="presentation")
              li(role="presentation")
                p.nav-header(role="menuitem") Web Documents
              each doc in web_docs
                li(role="presentation")
                  a(role="menuitem", href="#{doc.url}") #{doc.name}
              li.divider(role="presentation")
              li(role="presentation")
                p.nav-header(role="menuitem") PDF Documents
              each doc in pdf_docs
                li(role="presentation")
                  a(role="menuitem", href="/docs/project/#{doc.filename}") #{doc.name}
              li.divider(role="presentation")
              li(role="presentation")
                p.nav-header(role="menuitem") Other Documents
              each doc in other_docs
                li(role="presentation")
                  a(role="menuitem", href="#{doc.url}") #{doc.name}

          li(class=page === "about" ? "active" : undefined)
            a(href="/about") About
